@model AppVendas.Models.Categoria

@{
    ViewData["Title"] = "Deletar Categoria";
}

<div class="d-flex justify-content-between my-5 align-items-center">
    <span class="display-6 w-75 justify-content-center">Cadastro de Categorias</span>
</div>


<h3>Tem certeza que deseja deletar esta Categoria?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />

        <input type="submit" value="Deletar" class="btn btn-outline-danger mt-3 me-3 py-1 px-3" /> 

        <a class="btn btn-outline-secondary align-items-center  justify-content-center px-3 mt-3 py-1" asp-action="Index">
            <ion-icon name="caret-back-outline" class="me-2"></ion-icon>
            Voltar
        </a>
    </form>
</div>
