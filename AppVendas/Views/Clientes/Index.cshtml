@model IEnumerable<AppVendas.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="d-flex justify-content-between my-5 align-items-center">
    <span class="display-6 w-75 justify-content-center">Cadastro de Clientes</span>


    
    <a asp-action="Create" class="btn btn-secondary btn-lg px-3 w-25 d-flex align-items-center justify-content-center">
        <ion-icon name="add-circle-outline"></ion-icon>
        <span class=" fs-4 ms-2">Adicionar</span>
    </a>

</div>

<table class="table table-responsive table-hover">
    <thead>
        <tr class="bg-black text-light">
            <th>
                @Html.DisplayNameFor(model => model.ClienteNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CadastroAtivvo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td class="text-light">
                @Html.DisplayFor(modelItem => item.ClienteNome)
            </td>
                <td class="text-light">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
                <td class="text-light">
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
                <td class="text-light">
                @Html.DisplayFor(modelItem => item.CadastroAtivvo)
            </td>
                <td class="text-light">
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
                <td>
                    <a class="btn btn-outline-info btn-sm" asp-action="Edit" asp-route-id="@item.ClienteId"><ion-icon name="pencil-outline"></ion-icon>
                        Editar
                        </a>
                    <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.ClienteId"> <ion-icon name="trash-outline"></ion-icon>
                        Excluir
                        </a>
            </td>
        </tr>
}
    </tbody>
</table>
